<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify Songs List</title>
    <link rel="stylesheet" href="../css/style.css">
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #191414; /* Dark background */
            color: #fff; /* White text */
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            background: #282828; /* Darker container */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }
        h1 {
            text-align: center;
            color: #1DB954; /* Spotify Green */
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #404040; /* Light gray border */
        }
        th {
            background-color: #1D1D1D; /* Darker header */
        }
        input[type="text"] {
            width: calc(100% - 22px);
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #404040;
            border-radius: 4px;
            background-color: #333; /* Input background */
            color: #fff; /* Input text color */
        }
        input[type="submit"] {
            padding: 10px 15px;
            background-color: #1DB954; /* Spotify Green */
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        input[type="submit"]:hover {
            background-color: #1AAE3A; /* Darker green on hover */
        }
        button {
            padding: 5px 10px;
            background-color: #1DB954; /* Spotify Green */
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #1AAE3A; /* Darker green on hover */
        }
        .audio-control {
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Song List</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Artist</th>
                    <th>Music</th>
                    <th>Genre</th>
                    <th>Lyrics</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Replace with dynamic data as necessary -->
                <tr>
                    <td>Song 1</td>
                    <td>Artist 1</td>
                    <td class="audio-control">
                        <audio controls>
                            <source src="path/to/song1.mp3" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    </td>
                    <td>Pop</td>
                    <td><button onclick="alert('Lyrics for Song 1')">Show Lyrics</button></td>
                    <td>
                        <button onclick="editSong('1')">Edit</button>
                        <button onclick="deleteSong('1')">Delete</button>
                    </td>
                </tr>
                <tr>
                    <td>Song 2</td>
                    <td>Artist 2</td>
                    <td class="audio-control">
                        <audio controls>
                            <source src="path/to/song2.mp3" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    </td>
                    <td>Rock</td>
                    <td><button onclick="alert('Lyrics for Song 2')">Show Lyrics</button></td>
                    <td>
                        <button onclick="editSong('2')">Edit</button>
                        <button onclick="deleteSong('2')">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <form action="/save" method="post">
        <input type="text" name="name" placeholder="Song Name" required>
        <br>
        <input type="text" name="artist" placeholder="Artist" required>
        <br>
        <input type="text" name="music" placeholder="Music URL" required>
        <br>
        <input type="text" name="genre" placeholder="Genre" required>
        <br>
        <input type="text" name="lyrics" placeholder="Lyrics" required>
        <br>
        <input type="submit" value="Save">
    </form>

    <script>
        function editSong(id) {
            alert("Editing song with ID: " + id);
            // Add your editing logic here
        }

        function deleteSong(id) {
            if(confirm("Are you sure you want to delete this song?")) {
                // Add your deletion logic here
                alert("Deleted song with ID: " + id);
            }
        }
    </script>
</body>
</html>
