<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Song</title>
    <link rel="stylesheet" href="css/style.css">
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #191414; /* Dark background */
            color: #fff; /* White text */
            margin: 0;
            padding: 20px;
        }
        .add-container {
            max-width: 600px;
            margin: 0 auto;
            background: #282828; /* Darker container */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }
        h1 {
            text-align: center;
            color: #1DB954; /* Spotify Green */
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input[type="text"],
        textarea {
            width: calc(100% - 22px);
            padding: 10px;
            border: 1px solid #404040; /* Light gray border */
            border-radius: 4px;
            background-color: #333; /* Input background */
            color: #fff; /* Input text color */
        }
        button {
            padding: 10px 15px;
            background-color: #1DB954; /* Spotify Green */
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #1AAE3A; /* Darker green on hover */
        }
    </style>
</head>
<body>
    <div class="add-container">
        <h1>Add New Song</h1>
        <form action="/add" method="POST">
            <div class="form-group">
                <label for="name">Song Name</label>
                <input type="text" id="name" name="name" placeholder="Enter song name" required>
            </div>
            
            <div class="form-group">
                <label for="artist">Artist</label>
                <input type="text" id="artist" name="artist" placeholder="Enter artist name" required>
            </div>
            
            <div class="form-group">
                <label for="genre">Genre</label>
                <input type="text" id="genre" name="genre" placeholder="Enter genre" required>
            </div>
            
            <div class="form-group">
                <label for="lyrics">Lyrics</label>
                <textarea id="lyrics" name="lyrics" placeholder="Enter song lyrics" required></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Add Song</button>
            </div>
        </form>
    </div>

    <div class="songs-container">
        <h1>All Songs</h1>
        <ul>
            <% songs.forEach(function(song) { %>
                <li>
                    <strong>Name:</strong> <%= song.name %> <br>
                    <strong>Artist:</strong> <%= song.artist %> <br>
                    <strong>Genre:</strong> <%= song.genre %> <br>
                    <strong>Lyrics:</strong> <%= song.lyrics %>
                </li>
                <hr>
            <% }); %>
        </ul>
    </div>
    
</body>
</html>
